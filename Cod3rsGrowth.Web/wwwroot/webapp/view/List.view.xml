<mvc:View
    controllerName="ui5.o_senhor_dos_aneis.controller.List"
    xmlns:f="sap.f"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
>
    <List
        id="listaDePersonagens"
        headerText="Custom Content"
        mode="Delete"
        items="{path: '/'}"
    >
        <headerToolbar>
            <Toolbar>
                <Title text="Personagens" />
                <ToolbarSpacer />
                <SearchField
                    width="50%"
                    search=".onFiltrarPersonagens"
                />
            </Toolbar>
        </headerToolbar>
        <CustomListItem>
            <HBox>
                <core:Icon
                    size="2rem"
                    src="sap-icon://attachment-photo"
                    class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                />
                <VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
                    <ObjectIdentifier title="{nome}" />

                    <Label
                        text="{
                        path: 'profissao',
                        formatter: '.formatter.descricaoDaProfissao'
                    }"
                    />
                    <Label
                        text="{
                        path: 'estaVivo',
                        formatter: '.formatter.formatarBooleanVivoMorto'
                    }"
                    />
                    <ObjectNumber
                        number="{
                     parts:['idRaca']
                    }"
                        numberUnit="m"
                    />
                    <Label text="{profissao}" />
                    <Label text="{dataDoCadastro}" />
                    <Label
                        text="{
                     path: 'profissao',
                     type: 'sap.ui.mdc.enums.FieldDisplay.Description'}"
                    />
                </VBox>
            </HBox>
        </CustomListItem>
    </List>
</mvc:View>
