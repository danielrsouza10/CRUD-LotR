<mvc:View
    controllerName="ui5.o_senhor_dos_aneis.controller.List"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <List
        id="listaDePersonagens"
        headerText="Header Text"
        class="sapUiResponsiveMargin"
        width="auto"
        items="{path: '/'}"
    >
        <headerToolbar>
            <Toolbar>
                <Title text="Personagens" />
                <ToolbarSpacer />
                <SearchField
                    width="50%"
                    search=".onFiltrarPersonagens"
                />
            </Toolbar>
        </headerToolbar>
        <items>
            <ObjectListItem
                title="{nome}"
                number="{
                parts: [
                    'altura',
                    'view>unidadeMedida/'
                ],
                type: 'sap.ui.model.type.Unit',
                formatOptions: {
                    showMeasure: false
                }
            }"
                numberUnit="{view>/unidadeMedida}"
            />
        </items>
    </List>
</mvc:View>
