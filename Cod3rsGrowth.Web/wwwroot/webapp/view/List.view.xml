<mvc:View
    controllerName="ui5.o_senhor_dos_aneis.controller.List"
    xmlns:f="sap.f"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
>
    <List
        id="listaDePersonagens"
        headerText="Custom Content"
        mode="Delete"
        items="{path: '/'}"
        growing="true"
        growingThreshold="5"
    >
        <headerToolbar>
            <Toolbar>
                <Title text="Personagens" />
                <ToolbarSpacer />
                <SearchField
                    width="50%"
                    search=".onFiltrarPersonagens"
                />
                <Button
                    text="Adicionar"
                    press=".onAdicionar"
                />
            </Toolbar>
        </headerToolbar>
        <CustomListItem>
            <HBox>
                <core:Icon
                    size="2rem"
                    src="sap-icon://attachment-photo"
                    class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                />
                <VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
                    <ObjectIdentifier title="{nome}" />
                    <Label text="{raca}" />
                    <Label text="{profissao}" />
                    <!-- <tnt:InfoLabel
                        text="{
                        path: 'estaVivo',
                        formatter: '.formatter.formatarBooleanVivoMorto'
                    }"
                        renderMode="Narrow"
                        colorScheme="{
                            path: 'estaVivo',
                            formatter:'.formatter.formatarCorVivoMorto'
                        }"
                    /> -->
                    <Label
                        text="{
                            path: 'estaVivo',
                            formatter: '.formatter.formatarBooleanVivoMorto'
                        }"
                    />
                    <Label
                        text="{
                            path: 'dataDoCadastro',
                            formatter: '.formatter.formatarDataDeCadastro'
                        }"
                    />
                </VBox>
            </HBox>
        </CustomListItem>
    </List>
</mvc:View>
