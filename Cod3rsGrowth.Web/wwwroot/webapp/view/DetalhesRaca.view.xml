<mvc:View
    height="100%"
    controllerName="ui5.o_senhor_dos_aneis.controller.DetalhesRaca"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
>
    <Page
        id="paginaDetalhesRaca"
        title="{i18n>TituloPaginaDetalhesRaca}"
        showHeader="true"
        enableScrolling="true"
        showNavButton="true"
        navButtonPress=".onNavBack"
        class="sapUiResponsiveContentPadding"
    >
        <ObjectHeader
            icon="{
                        path: 'raca>/nome',
                        formatter: '.formatter.formatarIconeListagem'
                    }"
            iconDensityAware="false"
            iconAlt="{raca>/nome}"
            imageShape="Circle"
            responsive="true"
            id="objectHeader"
            fullScreenOptimized="true"
            binding="{raca>/}"
            intro="{i18n>LabelId}:{raca>/id}"
            title="{raca>/nome}"
            titleActive="false"
            backgroundDesign="Translucent"
            class="sapUiResponsivePadding--header"
        >
            <ObjectAttribute
                title="{i18n>LabelLocalizacaoGeografica}"
                text="{raca>/localizacaoGeografica}"
            />
            <ObjectAttribute
                title="{i18n>LabelHabilidadeRacial}"
                text="{raca>/habilidadeRacial}"
            />

            <statuses>
                <ObjectStatus
                    title="{i18n>LabelExtinta}"
                    text="{
                                path: 'raca>/estaExtinta', 
                                formatter: '.formatter.formatarBooleanEstaExtinta'
                            }"
                    state="{
                                    path: 'raca>/estaExtinta',
                                    formatter: '.formatter.formatarStatusExtintoNaLista'
                                }"
                />
            </statuses>
            <markers>
                <ObjectMarker type="Flagged" />
                <ObjectMarker type="Favorite" />
            </markers>
        </ObjectHeader>
        <footer>
            <OverflowToolbar id="otbFooter">
                <ToolbarSpacer />
                <Button
                    type="Emphasized"
                    text="{i18n>BotaoEditar}"
                    id="editarRacaBtn"
                    press=".onNavToEditarRaca"
                    class="sapUiTinyMarginEnd"
                    width="100px"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="High" />
                    </layoutData>
                </Button>
                <Button
                    type="Reject"
                    text="{i18n>BotaoRemover}"
                    press=".aoPressionarOBotaoRemover"
                    width="100px"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="Low" />
                    </layoutData>
                </Button>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
