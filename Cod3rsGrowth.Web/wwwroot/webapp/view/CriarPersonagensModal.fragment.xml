<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    controllerName="ui5.o_senhor_dos_aneis.controller.List"
>
    <Dialog
        id="modalCriarPersonagem"
        title="{i18n>TituloPaginaCriarPersonagem}"
        class="sapUiContentPadding"
    >
        <FlexBox>
            <Label
                text="{i18n>LabelRaca}:"
                class="sapUiSmallMargin"
                width="3rem"
            />
            <Label
                text="{raca>/nome}"
                class="sapUiSmallMargin"
            />
        </FlexBox>
        <FlexBox>
            <Label
                labelFor="inputNome"
                text="{i18n>LabelNome}:"
                class="sapUiSmallMargin"
                width="4rem"
            />
            <Input
                id="inputNome"
                placeholder="{i18n>PlaceholderNome}"
                type="Text"
                change=".aoMudarNome"
                width="100%"
                value="{personagem>/nome}"
            />
        </FlexBox>
        <FlexBox>
            <Label
                labelFor="profissaoComboBox"
                text="{i18n>LabelProfissao}:"
                class="sapUiSmallMargin"
                width="4rem"
            />
            <Select
                id="profissaoComboBox"
                change=".aoMudarProfissaoNaComboBox"
            >
                <core:Item
                    key="0"
                    text="{i18n>Nenhum}"
                />
                <core:Item
                    key="1"
                    text="{i18n>Guerreiro}"
                />
                <core:Item
                    key="2"
                    text="{i18n>Arqueiro}"
                />
                <core:Item
                    key="3"
                    text="{i18n>Mago}"
                />
                <core:Item
                    key="4"
                    text="{i18n>Ladrao}"
                />
                <core:Item
                    key="5"
                    text="{i18n>Jardineiro}"
                />
                <core:Item
                    key="6"
                    text="{i18n>Aventureiro}"
                />
                <core:Item
                    key="7"
                    text="{i18n>Rei}"
                />
                <core:Item
                    key="8"
                    text="{i18n>SenhoraDeLothlorien}"
                />
                <core:Item
                    key="9"
                    text="{i18n>SenhorDeValfenda}"
                />
                <core:Item
                    key="10"
                    text="{i18n>Escudeira}"
                />
                <core:Item
                    key="11"
                    text="{i18n>Capitao}"
                />
                <core:Item
                    key="12"
                    text="{i18n>Princesa}"
                />
                <core:Item
                    key="13"
                    text="{i18n>Ent}"
                />
                <core:Item
                    key="14"
                    text="{i18n>Cavaleiro}"
                />
                <core:Item
                    key="15"
                    text="{i18n>ExHobbit}"
                />
            </Select>
        </FlexBox>
        <FlexBox>
            <Label
                labelFor="inputIdade"
                text="{i18n>LabelIdade}:"
                class="sapUiSmallMargin"
                width="4rem"
            />
            <Input
                id="inputIdade"
                placeholder="{i18n>PlaceholderIdade}"
                type="Number"
                change=".aoMudarIdade"
                width="100%"
                value="{personagem>/idade}"
            />
        </FlexBox>
        <FlexBox>
            <Label
                labelFor="inputAltura"
                text="{i18n>LabelAltura}:"
                class="sapUiSmallMargin"
                width="4rem"
            />
            <Input
                id="inputAltura"
                placeholder="{i18n>PlaceholderAltura}"
                type="Number"
                change=".aoMudarAltura"
                width="100%"
                value="{personagem>/altura}"
            />
        </FlexBox>
        <FlexBox>
            <Label
                text="{i18n>LabelCondicao}:"
                class="sapUiSmallMargin"
                width="4rem"
            />
            <RadioButtonGroup
                id="radioBtnVivoMorto"
                columns="2"
                valueState="None"
                select="aoSelecionarCondicao"
            >
                <RadioButton
                    id="radioBtnVivo"
                    text="{i18n>radioBtnVivo}"
                />
                <RadioButton
                    id="radioBtnMorto"
                    text="{i18n>radioBtnMorto}"
                />
            </RadioButtonGroup>
        </FlexBox>

        <beginButton>
            <Button
                text="{i18n>BotaoAdicionar}"
                press=".aoPressionarAdicionarNoModal"
                id="criarPersonagemModalBtn"
                type="Accept"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>BotaoCancelar}"
                press=".aoPressionarCancelarNoModal"
                id="cancelarCriarPersonagemModalBtn"
                type="Reject"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
