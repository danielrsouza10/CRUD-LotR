<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="ui5.o_senhor_dos_aneis.controller.CriarPersonagem"
    xmlns="sap.m"
>
    <Page
        title="{i18n>TituloPaginaCriarPersonagem}"
        id="paginaCriarPersonagem"
        showHeader="true"
        enableScrolling="true"
        showNavButton="true"
        navButtonPress=".onNavBack"
        class="sapUiContentPadding"
    >
        <content>
            <FlexBox>
                <Label
                    text="{i18n>Nome}:"
                    class="sapUiTinyMarginEnd"
                />
                <Input placeholder="{i18n>Digite o nome do personagem}" 
				change=".aoMudarNome"/>
            </FlexBox>
            <FlexBox>
                <Label
                    text="{i18n>LabelRaca}:"
                    class="sapUiTinyMarginEnd"
                />
                <Select
                    id="comboBoxRacas"
                    change=".aoMudarRacaNaComboBox"
                    items="{racas>/}"
                >
                    <core:Item
                        key="{racas>id}"
                        text="{racas>nome}"
                    />
                </Select>
                <Label
                    text="{i18n>LabelProfissao}:"
                    class="sapUiTinyMarginEnd"
                />
                <Select
                    id="comboBoxProfissoes"
                    change=".aoMudarProfissaoNaComboBox"
                >
                    <core:Item
                        key="0"
                        text="{i18n>Nenhum}"
                    />
                    <core:Item
                        key="1"
                        text="{i18n>Guerreiro}"
                    />
                    <core:Item
                        key="2"
                        text="{i18n>Arqueiro}"
                    />
                    <core:Item
                        key="3"
                        text="{i18n>Mago}"
                    />
                    <core:Item
                        key="4"
                        text="{i18n>Ladrao}"
                    />
                    <core:Item
                        key="5"
                        text="{i18n>Jardineiro}"
                    />
                    <core:Item
                        key="6"
                        text="{i18n>Aventureiro}"
                    />
                    <core:Item
                        key="7"
                        text="{i18n>Rei}"
                    />
                    <core:Item
                        key="8"
                        text="{i18n>SenhoraDeLothlorien}"
                    />
                    <core:Item
                        key="9"
                        text="{i18n>SenhorDeValfenda}"
                    />
                    <core:Item
                        key="10"
                        text="{i18n>Escudeira}"
                    />
                    <core:Item
                        key="11"
                        text="{i18n>Capitao}"
                    />
                    <core:Item
                        key="12"
                        text="{i18n>Princesa}"
                    />
                    <core:Item
                        key="13"
                        text="{i18n>Ent}"
                    />
                    <core:Item
                        key="14"
                        text="{i18n>Cavaleiro}"
                    />
                    <core:Item
                        key="15"
                        text="{i18n>ExHobbit}"
                    />
                </Select>
            </FlexBox>
        </content>
        <footer>
            <OverflowToolbar id="otbFooter">
                <ToolbarSpacer />
                <Button
                    type="Accept"
                    text="{i18n>BotaoAdicionar}"
                    id="criarPersonagemBtn"
                    press=".onNavToCriarPersonagem"
                    class="sapUiTinyMarginEnd"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="High" />
                    </layoutData>
                </Button>
                <Button
                    type="Reject"
                    text="{i18n>BotaoCancelar}"
                    id="cancelarPersonagemBtn"
                    class="sapUiTinyMarginEnd"
                    press=".onNavBack"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="Low" />
                    </layoutData>
                </Button>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
