<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="ui5.o_senhor_dos_aneis.controller.CriarPersonagem"
    xmlns="sap.m"
>
    <Page
        title="{i18n>TituloPaginaCriarPersonagem}"
        id="paginaCriarPersonagem"
        showHeader="true"
        enableScrolling="true"
        showNavButton="true"
        navButtonPress=".onNavBack"
        class="sapUiContentPadding"
    >
        <VBox
            justifyContent="Center"
            alignItems="Center"
            fitContainer="true"
        >
            <Panel
                headerText="Detalhes do Personagem"
                class="sapUiContentPadding"
            >
                <HBox alignItems="Center">
                    <Label
                        labelFor="inputNome"
                        text="{i18n>Nome}:"
                        class="sapUiSmallMargin"
                        width="4rem"
                    />
                    <Input
                        id="inputNome"
                        placeholder="{i18n>Nome}"
                        change=".aoMudarNome"
                        width="13rem"
                    />
                </HBox>
                <HBox
                    alignItems="Center"
                    alignContent="Center"
                >
                    <Label
                        labelFor="comboBoxRacas"
                        text="{i18n>LabelRaca}:"
                        class="sapUiSmallMargin"
                        width="4rem"
                    />
                    <Select
                        id="comboBoxRacas"
                        change=".aoMudarRacaNaComboBox"
                        items="{racas>/}"
                        width="13rem"
                    >
                        <core:Item
                            key="{racas>id}"
                            text="{racas>nome}"
                        />
                    </Select>
                </HBox>
                <HBox alignItems="Center">
                    <Label
                        labelFor="comboBoxProfissoes"
                        text="{i18n>LabelProfissao}:"
                        class="sapUiSmallMargin"
                        width="4rem"
                    />
                    <Select
                        id="comboBoxProfissoes"
                        change=".aoMudarProfissaoNaComboBox"
                        width="13rem"
                    >
                        <core:Item
                            key="0"
                            text="{i18n>Nenhum}"
                        />
                        <core:Item
                            key="1"
                            text="{i18n>Guerreiro}"
                        />
                        <core:Item
                            key="2"
                            text="{i18n>Arqueiro}"
                        />
                        <core:Item
                            key="3"
                            text="{i18n>Mago}"
                        />
                        <core:Item
                            key="4"
                            text="{i18n>Ladrao}"
                        />
                        <core:Item
                            key="5"
                            text="{i18n>Jardineiro}"
                        />
                        <core:Item
                            key="6"
                            text="{i18n>Aventureiro}"
                        />
                        <core:Item
                            key="7"
                            text="{i18n>Rei}"
                        />
                        <core:Item
                            key="8"
                            text="{i18n>SenhoraDeLothlorien}"
                        />
                        <core:Item
                            key="9"
                            text="{i18n>SenhorDeValfenda}"
                        />
                        <core:Item
                            key="10"
                            text="{i18n>Escudeira}"
                        />
                        <core:Item
                            key="11"
                            text="{i18n>Capitao}"
                        />
                        <core:Item
                            key="12"
                            text="{i18n>Princesa}"
                        />
                        <core:Item
                            key="13"
                            text="{i18n>Ent}"
                        />
                        <core:Item
                            key="14"
                            text="{i18n>Cavaleiro}"
                        />
                        <core:Item
                            key="15"
                            text="{i18n>ExHobbit}"
                        />
                    </Select>
                </HBox>
                <HBox alignItems="Center">
                    <Label
                        labelFor="inputIdade"
                        text="{i18n>Idade}:"
                        class="sapUiSmallMargin"
                        width="4rem"
                    />
                    <Input
                        id="inputIdade"
                        placeholder="{i18n>Idade}"
                        type="Number"
                        change=".aoMudarIdade"
                        width="50%"
                    />
                </HBox>
                <HBox alignItems="Center">
                    <Label
                        labelFor="inputAltura"
                        text="{i18n>Altura}:"
                        class="sapUiSmallMargin"
                        width="4rem"
                    />
                    <Input
                        id="inputAltura"
                        placeholder="{i18n>Altura}"
                        type="Number"
                        change=".aoMudarAltura"
                        width="50%"
                    />
                </HBox>
                <HBox alignItems="Center">
                    <Label
                        labelFor="radioBtnVivoMorto"
                        text="{i18n>LabelCondicao}:"
                        width="4rem"
                        class="sapUiSmallMargin"
                    />
                    <RadioButtonGroup
                        id="radioBtnVivoMorto"
                        columns="2"
                        valueState="None"
                    >
                        <RadioButton
                            id="radioBtnVivo"
                            text="{i18n>radioBtnVivo}"
                        />
                        <RadioButton
                            id="radioBtnMorto"
                            text="{i18n>radioBtnMorto}"
                        />
                    </RadioButtonGroup>
                </HBox>
            </Panel>
        </VBox>

        <footer>
            <OverflowToolbar id="otbFooter">
                <ToolbarSpacer />
                <Button
                    type="Accept"
                    text="{i18n>BotaoAdicionar}"
                    id="criarPersonagemBtn"
                    press=".onCriarPersonagem"
                    class="sapUiTinyMarginEnd"
                    enabled="true"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="High" />
                    </layoutData>
                </Button>
                <Button
                    type="Reject"
                    text="{i18n>BotaoCancelar}"
                    id="cancelarPersonagemBtn"
                    class="sapUiTinyMarginEnd"
                    press=".onNavBack"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="Low" />
                    </layoutData>
                </Button>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
