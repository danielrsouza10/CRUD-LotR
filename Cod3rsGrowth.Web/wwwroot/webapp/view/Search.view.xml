<mvc:View
    controllerName="ui5.o_senhor_dos_aneis.controller.Search"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Panel
        headerText="Personagens"
        class="sapUiResponsiveMargin"
        width="auto">
        <content>
            <Input
                placeholder="Nome do personagem"
                value="{/personagem/nome}"
                valueLiveUpdate="true"
                width="60%" />
            <Button
                id="searchButton"
                text="{i18n>searchButtonText}"
                press=".onSearch"
                class="sapUiSmallMarginEnd mySearchButton" />
            <FormattedText htmlText="Teste" class="myCustomText"></FormattedText>
        </content>
    </Panel>
</mvc:View>