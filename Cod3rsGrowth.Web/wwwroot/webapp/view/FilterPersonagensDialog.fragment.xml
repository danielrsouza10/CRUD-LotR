<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    controllerName="ui5.o_senhor_dos_aneis.controller.List"
>
    <Dialog
        id="filterDialog"
        title="{i18n>Filter}"
        class="sapUiContentPadding"
    >
        <FlexBox>
            <Label
                labelFor="comboBoxRacas"
                text="{i18n>LabelRaca}:"
                class="sapUiSmallMargin"
                width="4rem"
            />
            <Select
                id="comboBoxRacas"
                change=".aoMudarRacaNaComboBox"
                items="{racas>/}"
            >
                <core:Item
                    key="{racas>id}"
                    text="{racas>nome}"
                />
            </Select>
        </FlexBox>
        <FlexBox>
            <Label
                labelFor="profissaoComboBox"
                text="{i18n>LabelProfissao}:"
                class="sapUiSmallMargin"
                width="4rem"
            />
            <Select
                id="profissaoComboBox"
                change=".aoMudarProfissaoNaComboBox"
            >
                <core:Item
                    key="0"
                    text="{i18n>Nenhum}"
                />
                <core:Item
                    key="1"
                    text="{i18n>Guerreiro}"
                />
                <core:Item
                    key="2"
                    text="{i18n>Arqueiro}"
                />
                <core:Item
                    key="3"
                    text="{i18n>Mago}"
                />
                <core:Item
                    key="4"
                    text="{i18n>Ladrao}"
                />
                <core:Item
                    key="5"
                    text="{i18n>Jardineiro}"
                />
                <core:Item
                    key="6"
                    text="{i18n>Aventureiro}"
                />
                <core:Item
                    key="7"
                    text="{i18n>Rei}"
                />
                <core:Item
                    key="8"
                    text="{i18n>SenhoraDeLothlorien}"
                />
                <core:Item
                    key="9"
                    text="{i18n>SenhorDeValfenda}"
                />
                <core:Item
                    key="10"
                    text="{i18n>Escudeira}"
                />
                <core:Item
                    key="11"
                    text="{i18n>Capitao}"
                />
                <core:Item
                    key="12"
                    text="{i18n>Princesa}"
                />
                <core:Item
                    key="13"
                    text="{i18n>Ent}"
                />
                <core:Item
                    key="14"
                    text="{i18n>Cavaleiro}"
                />
                <core:Item
                    key="15"
                    text="{i18n>ExHobbit}"
                />
            </Select>
        </FlexBox>
        <Label
            text="{i18n>LabelCondicao}:"
            class="sapUiSmallMargin"
            width="4rem"
        />
        <CheckBox
            text="{i18n>CheckBoxVivo}"
            valueState="Success"
            select=".aoChecarVivo"
            id="checkBoxVivo"
        />
        <CheckBox
            text="{i18n>CheckBoxMorto}"
            valueState="Error"
            select=".aoChecarMorto"
            id="checkBoxMorto"
        />
        <FlexBox>
            <Label
                labelFor="dataInicial"
                text="{i18n>DataInicialdoCadastro}:"
                class="sapUiSmallMargin"
                width="10rem"
            />
            <DatePicker
                id="dataInicial"
                change=".aoSelecionarDataInicial"
            />
        </FlexBox>
        <FlexBox>
            <Label
                labelFor="dataFinal"
                text="{i18n>DataFinaldoCadastro}:"
                class="sapUiSmallMargin"
                width="10rem"
            />
            <DatePicker
                id="dataFinal"
                change=".aoSelecionarDataFinal"
            />
        </FlexBox>

        <beginButton>
            <Button
                text="{i18n>Ok}"
                press=".aoFecharDialogoDeFiltro"
                id="okBtn"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
